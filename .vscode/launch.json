{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Coffee",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.coffee",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "stopOnEntry": true,
            "smartStep": true,
            "outFiles": [
                "${workspaceRoot}/dist/*"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858,
            "outFiles": []
        }
    ]
}

